<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--定义别名：方便在mapper.xml使用-->
    <typeAliases>
        <typeAlias type="com.wangxin.ssm.course.model.Course" alias="course"/>
        <!--<package name="com.wangxin.ssm.course.model" />用包批量定义别名，别名的名字是类的首字母小写=-->
    </typeAliases>
    <!--配置Mapper的位置 -->
    <mappers>
    <mapper
            resource="com/wangxin/ssm/course/mapper/CourseMapper.xml" />
        <!--可以放多个-->
        <!--<mapper
       resource="com/wangxin/ssm/user/mapper/XXXXMapper.xml" />-->
    </mappers>
</configuration>