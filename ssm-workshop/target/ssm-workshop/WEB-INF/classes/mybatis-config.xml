<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--配置别名 -->
    <typeAliases>
        <!--定义Mapper中引⽤到的业务对象类的位置-->
        <package name="com.wangxin.ssm.product.model" />
        <!--可以放多个-->
        <!--<package name="com.ssm.course.xxx.model" />-->
    </typeAliases>
    <!--配置Mapper的位置 -->
    <mappers>
        <mapper resource="com/wangxin/ssm/product/mapper/ProductMapper.xml" />
        <!--可以放多个-->
        <!--<mapper resource="com/hbxy/ssm/user/mapper/XXXXMapper.xml" />-->
    </mappers>
</configuration>